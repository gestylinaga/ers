---
import MainLayout from "../layouts/MainLayout.astro";
import HomeMenu from "../components/HomeMenu.astro";
---
<MainLayout title="ers | Elden Ring Stuff" >
<a href="/ers/" class="brand">
	<h1>Elden Ring Stuff</h1>
</a>
	<HomeMenu />
</MainLayout>

<style>
  * {
    --text: #e0def4;
    --subtle: #908caa;
    --love: #eb6f92;
    --gold: #f6c177;
    --rose: #ebbcba;
    --pine: #31748f;
    --foam: #9ccfd8;
    --iris: #c4a7e7;
  }

	.brand {
		text-decoration: none;
		color: var(--rose);
		&:hover {
			color: var(--iris);
		}
	}

	h1 {
		font-size: 4rem;
	}
</style>
